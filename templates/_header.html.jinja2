<dialog class="grid grid--modal modal" id="delete-modal">
    <h2 class="modal__title">Are you sure you want to delete this note? This action cannot be undone.</h2>
    <button type="button" class="button button--primary button--delete modal__action">Yes, Delete</button>
</dialog>
<header>
    <nav class="nav">
        <div class="nav__left">
            <a href="{{ url_for("new_note") }}" class="button button--secondary button--nav">Create Note</a>
        </div>
        <div class="nav__center">
            <ul class="nav-list nav-list--horizontal">
                <li class="nav-list__item"><a href="{{ url_for("index") }}" class="link link--nav">Home</a></li>
                <li class="nav-list__item"><a href="{{ url_for("introduction") }}" class="link link--nav">Student
                    Introduction</a></li>
            </ul>
        </div>
        <div class="nav__right">
            {% if not current_user.is_authenticated %}
                <a href="{{ url_for("login") }}" class="button button--primary button--nav">Login</a>
                <a href="{{ url_for("signup") }}" class="button button--outline-primary button--nav">Signup</a>
            {% else %}
                <a href="{{ url_for("logout") }}" class="button button--primary button--nav">Logout</a>
            {% endif %}
        </div>
    </nav>
</header>