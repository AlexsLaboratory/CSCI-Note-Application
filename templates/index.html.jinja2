{% extends "_base.html.jinja2" %}
{% block title %}Note Application | Home{% endblock %}
{% block body %}
    <div class="grid grid--content content">
        <h1 class="content__title">My Notes</h1>
        <div class="grid content__items grid--items">
            {% for note in notes %}
                <div class="grid--item">
                    <h3 class="grid--item__title">{{ note.title }}</h3>
                    <p class="grid--item__body">{{ note.body }}</p>
                    <div class="grid--item__timestamp">
                        <span class="grid--item__timestamp__label">created:</span>
                        <p class="grid--item__timestamp__time">{{ note.time_created | humanize_timestamp }}</p>
                    </div>
                    <hr class="grid--item__separator">
                    <a href="{{ url_for("view_note", id=note.id) }}"
                       class="button button--primary button--view grid--item__view">View</a>
                    <a href="{{ url_for("edit_note", id=note.id) }}"
                       class="button button--primary button--edit grid--item__edit">Edit</a>
                    <button type="button" class="button button--primary button--delete grid--item__delete" data-id="{{ note.id }}">Delete
                    </button>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}